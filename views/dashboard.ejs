        // Auto-logout warning (optional)
        setTimeout(() => {
            if (confirm('Your session will expire soon. Would you like to continue?')) {
                // You could refresh the session here
                location.reload();
            }
        }, 25 * 60 * 1000); // 25 minutes warning for 30-minute session
    </script>
</body>
</html>